# Production Environment Configuration for Local Testing
NODE_ENV=production
USE_DATABASE=true

# Replace with your actual Railway database URL
# Get this from: Railway Dashboard > Your Project > Database > Connect
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST.railway.app:YOUR_PORT/railway

# Production Security Keys (generate these securely)
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-chars-long-for-production-use
ENCRYPTION_KEY=1234567890123456789012345678901234567890123456789012345678901234

# Server Configuration
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_MAX_AGE=28800000

# Health Check
HEALTH_CHECK_ENABLED=true
