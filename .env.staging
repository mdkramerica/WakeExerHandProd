# Production Environment Variables for HIPAA-Compliant Hand Assessment Platform

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Security Configuration (Required for Production)
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-chars-long-for-production-use
ENCRYPTION_KEY=your-64-character-hex-encryption-key-for-aes-256-encryption-here

# Application Environment (Required)
NODE_ENV=production
USE_DATABASE=true

# Server Configuration
PORT=5000

# CORS Configuration (Update with your actual domains)
CORS_ORIGINS=https://your-app.railway.app,https://your-custom-domain.com

# Rate Limiting Configuration (Optional - defaults provided)
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window
LOGIN_RATE_LIMIT_MAX=5    # Max login attempts per window

# Session Configuration (Optional - defaults provided)
SESSION_MAX_AGE=28800000  # 8 hours in milliseconds

# Logging Configuration (Optional)
LOG_LEVEL=info
LOG_FORMAT=json

# MediaPipe CDN Configuration (Optional)
MEDIAPIPE_CDN_URL=https://cdn.jsdelivr.net/npm/@mediapipe/

# Additional Security Headers (Optional)
HSTS_MAX_AGE=31536000     # 1 year in seconds
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Monitoring and Health Checks (Optional)
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# HIPAA Compliance Settings
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as required by HIPAA
ENCRYPTION_AT_REST=true
BACKUP_ENCRYPTION=true

# Email Configuration (if implementing notifications)
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# Error Reporting (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Redis Configuration (if implementing session store)
REDIS_URL=redis://username:password@host:port

# Backup Configuration
BACKUP_BUCKET_NAME=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Compliance and Audit
AUDIT_WEBHOOK_URL=your-audit-system-webhook-url
COMPLIANCE_MODE=hipaa
DATA_RETENTION_POLICY=strict

# Performance Configuration
MAX_REQUEST_SIZE=10mb
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000     # 30 seconds

# Feature Flags
ENABLE_PATIENT_PORTAL=true
ENABLE_CLINICAL_DASHBOARD=true
ENABLE_ADMIN_PORTAL=true
ENABLE_API_DOCUMENTATION=false  # Disable in production

# Development/Testing (DO NOT USE IN PRODUCTION)
# DISABLE_SECURITY=false  # Never set to true in production
# DEBUG_MODE=false        # Never set to true in production
# SKIP_AUTH=false         # Never set to true in production

